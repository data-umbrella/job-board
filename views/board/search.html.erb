<!-- Hero section -->
<section class="mt-16">
  <div class="text-center">
    <div class="mb-2">
      <p class="text-2xl font-bold text-black">
        Search all the job listings
      </p>
    </div>

    <!-- Search box -->
    <div class="w-2/3 mx-auto mt-10">
      <form method="POST" action="" class="">
        <div class="mb-4 inline-block w-3/4">
          <input class="appearance-none border-2 border-gray-300 rounded w-full py-2 px-4 mb-3 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" placeholder="Search by keyword" type="text" name="query" required>
        </div>
        <div class="inline-block">
          <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">
            Go
          </button>
        </div>
      </form>
    </div>

  </div>
</section>

<section class="mt-24 text-xl lg:text-base">

  <% if @jobs.nil? %>
    <p class="text-xl text-center">
      <!-- Search something above! -->
    </p>
  <% elsif @jobs.empty? %>
    <p class="text-xl text-center">
      No jobs matched the terms you search. Try another keyword?
    </p>
  <% elsif @jobs %>
    <% @jobs.each_with_index do |job, index| %>
      <% if @other_host %>
        <a href="jobs/<%= job.slug %>">
      <% else %>
        <a href="/board/<%= params['account'] %>/jobs/<%= job.slug %>">
      <% end %>
          <%= erb :'shared/job_card', locals: { job: job } %>
        </a>
    <% end %>
  <% end %>

</section>
